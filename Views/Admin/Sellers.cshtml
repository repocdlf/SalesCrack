@model List<SalesCrack.Models.Seller>
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/Admin_Navbar_Layout.cshtml";
}
<h2>Sellers</h2>
@{
    if (Model.Count == 0)
    {
<div class="alert alert-warning" role="alert">No sellers load</div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Username</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <th scope="row">@s.IdSeller</th>
                        <td>@s.Usename</td>
                        
                    </tr>
                }
            </tbody>
        </table>

    }
}
