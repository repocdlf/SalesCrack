@model List<SalesCrack.ModelView.RankingModelView>
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/Admin_Navbar_Layout.cshtml";
}
<h2>Bulk Order Ranking</h2>
@{
    if (Model.Count == 0)
    {
        <div class="alert alert-warning" role="alert">No bulk order made</div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Seller ID</th>
                    <th scope="col"><a class="nav-link" href="/Admin/RankingBulkOrders?field=quantity&order=@ViewBag.NextOrder">Number of Bulk Order</a></th>
                    <th scope="col"><a class="nav-link" href="/Admin/RankingBulkOrders?field=price&order=@ViewBag.NextOrder">Total Amount</a></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <th scope="row">@r.NameSeller</th>
                        <td>@r.CountOrders</td>
                        <td>@r.TotalAmount</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
